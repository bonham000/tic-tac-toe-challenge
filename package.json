{
  "name": "tic-tac-toe",
  "description": "Play Tic Tac Toe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "start": "react-scripts start",
    "build": "react-scripts build && mv build/index.html build/200.html",
    "test": "react-scripts test",
    "test:unit": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "prettier": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test:all": "yarn prettier && yarn eslint && yarn tsc && yarn test:unit",
    "deploy": "yarn build && surge --project ./build --domain toe-tac-tic.surge.sh"
  },
  "dependencies": {
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/node": "16.7.13",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/shortid": "^0.0.29",
    "@types/styled-components": "5.1.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.2.0",
    "react-scripts": "5.0.0",
    "shortid": "^2.2.16",
    "styled-components": "5.3.3",
    "typescript": "4.4.2",
    "web-vitals": "2.1.0"
  },
  "devDependencies": {
    "prettier": "2.5.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
